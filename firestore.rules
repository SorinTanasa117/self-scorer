rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can create and read their own document
      allow create, read: if request.auth.uid == userId;

      // Any subcollection document can be read or written to by the user
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
